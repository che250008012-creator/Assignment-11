#include <iostream>
#include <cstring>
using namespace std;

int main() {
    char word[100];
    char seq[4];
    int found=0;
    
    cout << "Enter a word: ";
    cin >> word;
    
    cout << endl << "Enter a sequence of 3 letters: ";
    cin >> seq;
    
    int len = strlen(word);
    
    for (int j=0; j<len; j++) {
        word[j] = tolower(word[j]);
    }
    
    for (int j=0; j<3; j++) {
        seq[j] = tolower(seq[j]);
    }
    
    for (int i=0; i<=len-3; i++) {
        if (word[i]==seq[0] && word[i+1]==seq[1] && word[i+2]==seq[2]) {
            found = 1;
            break;
        }
    }
    if (found) {
        cout << endl << "Sequence found in the string." << endl;
    }
    else {
        cout << endl << "Sequence not found in the string." << endl;
    }
    
    return 0;
}
